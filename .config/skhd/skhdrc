#######################
# Start application shortkeys
alt - a : open "/Applications/Alacritty.app/"
shift + alt - a : /Applications/Alacritty.app/Contents/MacOS/alacritty
# alt - b : open "/Applications/Google Chrome.app/"
alt - b : open "/Applications/Firefox.app/"
# shift + alt - b : export MOZ_DISABLE_SAFE_MODE_KEY=1; open "/Applications/Firefox.app"
shift + alt - b : open "/Applications/DuckDuckGo.app"
alt - o : open "/Applications/Obsidian.app/"
alt - q : open -a Finder
alt - z : open ~/.Trash

#### Yabai configuration
# change window focus within space
alt - k : yabai -m window --focus north
alt - j : yabai -m window --focus south
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
# move managed window
shift + alt - k : yabai -m window --warp north
shift + alt - j : yabai -m window --warp south
shift + alt - h : yabai -m window --warp west
shift + alt - l : yabai -m window --warp east
# swap managed window
shift + alt + ctrl - k : yabai -m window --swap north
shift + alt + ctrl - j : yabai -m window --swap south
shift + alt + ctrl - h : yabai -m window --swap west
shift + alt + ctrl - l : yabai -m window --swap east
# rotate clockwise
alt - r : yabai -m space --rotate 270
shift + alt - r : yabai -m space --rotate 90
# change size managed window
cmd + shift + alt - k : yabai -m window --resize top_right:0:-100
cmd + shift + alt - j : yabai -m window --resize bottom_left:0:100
cmd + shift + alt - h : yabai -m window --resize bottom_left:-100:0
cmd + shift + alt - l : yabai -m window --resize bottom_right:100:0
# balance size of windows
alt - 0 : yabai -m space --balance
# toggle window split typ
alt - e : yabai -m window --toggle split

# move window and focus desktop
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
# fast focus desktop
alt - tab : yabai -m space --focus recent

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen
# toggle padding and gap
alt - g : yabai -m space --toggle padding; yabai -m space --toggle gap
# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2
# toggle window split type
alt - m : yabai -m space --toggle mission-control


